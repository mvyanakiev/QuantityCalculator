<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="/" method="post">
            <fieldset>
                <!--<legend>{{errorMsg}}</legend>-->
                <div class="form-group">
                    <label class="col-sm-4 control-label">Quantity</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="quantity" placeholder="pcs"
                               name="calculator[quantity]" value="{{calculator.quantity}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Width</label>
                    <div class="col-sm-4 ">
                        <input type="number" class="form-control" id="leftOperand" placeholder="mm"
                               name="calculator[leftOperand]" value="{{calculator.leftOperand}}">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Height</label>
                    <div class="col-sm-4">
                        <input type="number" class="form-control" id="rightOperand" placeholder="mm"
                               name="calculator[rightOperand]" value="{{calculator.rightOperand}}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Bleed</label>
                    <div class="col-sm-4">
                        <input type="number" step="any" class="form-control" id="bleed" placeholder="mm"
                               name="calculator[bleed]" value="{{calculator.bleed}}">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Quantity sheets</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="result"
                               name="result" value="{{result}}">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">Calculate</button>
                        <button type="reset" class="btn btn-default">Reset</button>
                    </div>
                </div>
            </fieldset>
        </form>
        <!--<p>Някакъв <strong>{{chislo}}</strong> тук</p>-->

    </div>
</div>


